{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es5", "es2015.promise", "es6", "dom"],
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "listFiles": true,
        "strictNullChecks": false,
        "outDir": "dist",
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}